{
  "name": "subs-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && REDIS_DISABLE_DURING_BUILD=1 next build && npm run build:worker",
    "start": "next start",
    "lint": "next lint",
    "prisma": "prisma",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.cjs",
    "build:worker": "tsc -p tsconfig.worker.json",
    "worker": "node dist-worker/worker/index.js",
    "test": "vitest run",
    "postinstall": "prisma generate",
    "dev:infra:up": "docker compose -f docker/compose.infra.yml up -d",
    "dev:infra:down": "docker compose -f docker/compose.infra.yml down -v",
    "dev:prepare": "npm run dev:infra:up && prisma migrate dev --name init --skip-generate",
    "dev:all": "npm run dev:prepare && next dev",
    "dev:docker": "docker compose -f docker/compose.infra.yml -f docker/compose.dev.yml up --build app-dev",
    "dev:prodlike": "npm run build && docker compose -f docker/compose.infra.yml -f docker/compose.prod.yml up --build app"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "6.13.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "bcryptjs": "3.0.2",
    "bullmq": "5.56.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "ioredis": "5.7.0",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-auth": "4.24.11",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "19.1.1",
    "resend": "6.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@tailwindcss/postcss": "4.1.11",
    "@types/bcryptjs": "3.0.0",
    "@types/node": "24.2.1",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "eslint": "9.33.0",
    "eslint-config-next": "15.4.6",
    "prisma": "6.13.0",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
